DEF[PORTVERSION]=	EXTRACT_INFO(GSTREAMER1_VERSION)
DEF[GST_VERSION]=	EXTRACT_INFO(GSTREAMER1_GST)
DEF[SOVERSION]=		EXTRACT_INFO(GSTREAMER1_SOVERSION)
DEF[BUILD_DIRS]=	gst-libs sys gst po pkgconfig ext/bz2
# ----------------------------------------------------------------------------

NAMEBASE=		gstreamer1-plugins-bad
VERSION=		${PORTVERSION}
KEYWORDS=		multimedia
VARIANTS=		standard
SDESC[standard]=	GStreamer Multimedia Framework "Bad" Plugins
HOMEPAGE=		https://gstreamer.freedesktop.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://gstreamer.freedesktop.org/src/gst-plugins-bad/
DISTFILE[1]=		gst-plugins-bad-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		multimedia/gstreamer1-plugins-bad

BUILD_DEPENDS=		video4linux:headers:standard
BUILDRUN_DEPENDS=	gstreamer1:single:standard
			gstreamer1-plugins-base:single:standard

USES=			gmake pkgconfig libtool gettext-runtime zlib
GNOME_COMPONENTS=	glib introspection
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-assrender
			--disable-bs2b
			--disable-chromaprint
			--disable-curl
			--disable-dash
			--disable-dtls
			--disable-dts
			--disable-faac
			--disable-faad
			--disable-flite
			--disable-gme
			--disable-gsm
			--disable-gtk3
			--disable-hls
			--disable-kate
			--disable-kms
			--disable-ladspa
			--disable-libde265
			--disable-libmms
			--disable-modplug
			--disable-mpeg2enc
			--disable-mplex
			--disable-musepack
			--disable-neon
			--disable-ofa
			--disable-openal
			--disable-opencv
			--disable-openexr
			--disable-opengl
			--disable-openh264
			--disable-openjpeg
			--disable-resindvd
			--disable-rtmp
			--disable-rsvg
			--disable-schro
			--disable-smoothstreaming
			--disable-sndfile
			--disable-soundtouch
			--disable-spandsp
			--disable-spc
			--disable-srtp
			--disable-sctp
			--disable-ttml
			--disable-vdpau
			--disable-wayland
			--disable-webp
			--disable-webrtcdsp
			--disable-x265
			--disable-zbar
# rest are not plugins
			--disable-gles2
			--disable-egl
			--disable-glx
			--enable-bz2
			--enable-dvb
			--enable-shm
			--disable-acm
			--disable-android_media
			--disable-apple_media
			--disable-avc
			--disable-bluez
			--disable-directfb
			--disable-direct3d
			--disable-directsound
			--disable-msdk
			--disable-nvenc
			--disable-sbc
			--disable-tinyalsa
			--disable-uvch264
			--disable-vcd
			--disable-vulkan
			--disable-wasapi
			--disable-wgl
			--disable-winks
			--disable-winscreencap
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
DISTNAME=		gst-plugins-bad-${PORTVERSION}
CFLAGS=			-Wno-format
LDFLAGS=		-lpthread
PLIST_SUB=		GSTVER=${GST_VERSION}
SOVERSION=		${SOVERSION}

post-patch:
	${REINPLACE_CMD} -e 's|FLAGS -Werror|FLAGS|' ${WRKSRC}/configure
	# even though sctp is disabled, libsctp is being build
	${REINPLACE_CMD} -e 's| sctp||' ${WRKSRC}/gst-libs/gst/Makefile.in

do-build:
.for dir in ${BUILD_DIRS}
	(cd ${BUILD_WRKSRC}/${dir} && ${DO_MAKE_BUILD} ${BUILD_TARGET})
.endfor

do-install:
.for dir in ${BUILD_DIRS}
	(cd ${INSTALL_WRKSRC}/${dir} && ${SETENV} ${MAKE_ENV} \
	${MAKE_CMD} ${MAKE_FLAGS} ${MAKEFILE} ${MAKE_ARGS} \
	${INSTALL_TARGET})
.endfor
	${RM} ${STAGEDIR}${PREFIX}/lib/pkgconfig/gstreamer-sctp-1.0.pc
