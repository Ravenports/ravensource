# This 'single' manifest is an exception to the primary/dev format of
# the other xorg modules
DEF[PORTVERSION]=	1.1.2
DEF[XNAME]=		xbitmaps
DEF[ALTNAME]=		xbitmaps
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X.org Bitmap files
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/data
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.bz2:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
MAKE_ARGS=		pkgconfigdir="{{PREFIX}}/lib/pkgconfig"
FPC_EQUIVALENT=		x11/${ALTNAME}
