CMAKE_ARGS=		-DUSE_PORTMIDI:BOOL=OFF
			-DUSE_LUA:BOOL=OFF
			-DUSE_CAMERA_SUPPORT:BOOL=OFF
			-DUSE_OPENJPEG:BOOL=OFF
			-DUSE_LIBSECRET:BOOL=OFF
