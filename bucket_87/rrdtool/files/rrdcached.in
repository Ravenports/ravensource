#!/bin/sh

# PROVIDE: rrdcached
# REQUIRE: DAEMON
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf to enable rrdcached:
#
# rrdcached_enable (bool):	Set to "NO" by default.
#				Set to "YES" to enable rrdcached
# rrdcached_address (string):	Socket or IP address to listen to
#				Default: socket %%PREFIX%%/var/run/rrdtool/rrdcached.sock
# rrdcached_user (string):	User owner of the socket
#				Default: %%RD_USR%%
# rrdcached_group (string):	Group owner of the socket
#				Default: %%RD_GRP%%
# rrdcached_pid (string):	PID file location
#				Default: %%PREFIX%%/var/run/rrdtool/rrdcached.pid
# rrdcached_flags (string):	Arguments appended to command_args
#				Default: ""

. /etc/rc.subr

name=rrdcached
rcvar=rrdcached_enable

load_rc_config $name

# Set defaults
: ${rrdcached_enable="NO"}
: ${rrdcached_address="%%PREFIX%%/var/run/rrdcached.sock"}
: ${rrdcached_user="%%RD_USR%%")
: ${rrdcached_group="%%RD_GRP%%"}
: ${rrdcached_pid="%%PREFIX%%/var/run/rrdcached.pid"}

pidfile=/var/run/${name}.pid   
command=%%PREFIX%%/bin/${name}
command_args="-U $rrdcached_user -s $rrdcached_group -l $rrdcached_address -p $rrdcached_pid"

run_rc_command "$1"   
