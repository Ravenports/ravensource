[PY313].USES_ON=			python:v13,wheel
[PY314].USES_ON=			python:v14,wheel

post-install:
	# Fix python shebangs
	(cd ${STAGEDIR}${PYTHON_SITELIBDIR}/qrcode &&\
		${SED} -i'' -e "s|/usr/bin/env python|${LOCALBASE}/bin/python3|" \
		console_scripts.py)
