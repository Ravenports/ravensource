DEF[PORTVERSION]=	1.4w
DEF[TAG]=		${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		gmrun
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		std
SDESC[std]=		Small GTK based 'Run application' dialog
HOMEPAGE=		https://github.com/wdlkmpx/gmrun
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/wdlkmpx:gmrun:${TAG}
DISTFILE[1]=		generated:main

SPKGS[std]=		set primary man nls docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		ISCL:primary
LICENSE_FILE=		ISCL:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11/gmrun

BUILD_DEPENDS=		harfbuzz:dev:std
			popt:dev:std
BUILDRUN_DEPENDS=	popt:primary:std

USES=			gmake pkgconfig
GNOME_COMPONENTS=	gtk3
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip

post-install:
	${MV} ${STAGEDIR}${PREFIX}/etc/gmrunrc \
		${STAGEDIR}${PREFIX}/etc/gmrunrc.sample
	${MKDIR} ${STAGEDIR}${STD_DOCDIR}
	${INSTALL_DATA} ${WRKSRC}/README.md ${STAGEDIR}${STD_DOCDIR}
