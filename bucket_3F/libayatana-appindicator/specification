NAMEBASE=		libayatana-appindicator
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		std
SDESC[std]=		Ayatana Application Indicators Shared Library
HOMEPAGE=		https://github.com/AyatanaIndicators/libayatana-appindicator/
