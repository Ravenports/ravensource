GENERATED=		yes
DISTNAME=		virtualenv-${PORTVERSION}.dist-info

# Requires-Dist extracted from wheel metadata
# distlib<1,>=0.3.7
# filelock<4,>=3.24.2; python_version >= '3.10'
# filelock<=3.19.1,>=3.16.1; python_version < '3.10'
# importlib-metadata>=6.6; python_version < '3.8'
# platformdirs<5,>=3.9.1
# python-discovery>=1
# typing-extensions>=4.13.2; python_version < '3.11'

[PY313].USES_ON=			python:v13,wheel
[PY313].RUN_DEPENDS_ON=			python-distlib:single:v13
					python-filelock:single:v13
					python-platformdirs:single:v13
					python-python-discovery:single:v13
[PY314].USES_ON=			python:v14,wheel
[PY314].RUN_DEPENDS_ON=			python-distlib:single:v14
					python-filelock:single:v14
					python-platformdirs:single:v14
					python-python-discovery:single:v14

USES=			cpe
CPE_VENDOR=		python
CPE_PRODUCT=		virtualenv
