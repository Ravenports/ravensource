SDESC[v14]=		Virtual Python Environment builder (3.14)
HOMEPAGE=		https://github.com/pypa/virtualenv
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPIWHL/29/d1/3f62e4f9577b28c352c11623a03fb916096d5c131303d4861b4914481b6b
DISTFILE[1]=		virtualenv-${PORTVERSION}-py3-none-any.whl:main
DIST_SUBDIR=		python-src

SPKGS[v13]=		single
SPKGS[v14]=		single

OPTIONS_AVAILABLE=	PY313 PY314
