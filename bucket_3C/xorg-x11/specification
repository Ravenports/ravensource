DEF[PORTVERSION]=	1.8.4
DEF[XNAME]=		x11
DEF[ALTNAME]=		libX11
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X-Window system library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11/libX11

RUN_DEPENDS=		xorg-xorgproto:single:standard

USES=			cpe perl:build libtool
XORG_COMPONENTS=	xorgproto xtransproto xau xdmcp xcb
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--datadir={{PREFIX}}/lib
			--without-xmlto
			--disable-specs
CONFIGURE_ENV=		ac_cv_path_PS2PDF=""
INSTALL_TARGET=		install-strip
CPE_VENDOR=		x.org
CPE_PRODUCT=		libx11

PLIST_SUB=		FMS={{VAR1:U5}}
VAR_OPSYS[sunos]=	VAR1=4

post-patch:
	${REINPLACE_CMD} 's/test.*-traditional.*;/true;/' \
		${WRKSRC}/configure
	${REINPLACE_CMD} '/^install-data-am:/,/^$$/ \
		s/install-specDATA//' ${WRKSRC}/nls/Makefile.in

post-install:
	# already installed by xorgproto
	${RM} -r ${STAGEDIR}${PREFIX}/include/X11/extensions
