DEF[PORTVERSION]=	20210731
DEF[SUFFIX]=		ru
DEF[LANGUAGE]=		Russian
DEF[INSTLOC]=		{{STAGEDIR}}{{PREFIX}}/share/hunspell
# ----------------------------------------------------------------------------

NAMEBASE=		hunspell-${SUFFIX}
VERSION=		${PORTVERSION}
KEYWORDS=		textproc russian
VARIANTS=		std
SDESC[std]=		Hunspell ${LANGUAGE} dictionary
HOMEPAGE=		https://hunspell.github.io/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://leaf.dragonflybsd.org/~marino/raven-distfiles/
DISTFILE[1]=		ru_RU_dictionary.tar.gz:main

SPKGS[std]=		single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		russian/hunspell

# License is similar to Apache v1.0 license
LICENSE=		CUSTOM1:single
LICENSE_FILE=		CUSTOM1:{{WRKSRC}}/README_ru_RU.txt
LICENSE_NAME=		CUSTOM1:"A.I. Lebedev License"
LICENSE_SCHEME=		solo

DISTNAME=		ru_RU_dictionary
SKIP_BUILD=		yes

do-install:
	${MKDIR} ${INSTLOC}
	${INSTALL_DATA} ${WRKSRC}/ru_RU.aff ${INSTLOC}
	${INSTALL_DATA} ${WRKSRC}/ru_RU.dic ${INSTLOC}
