DEF[PORTVERSION]=	0.19.0
# ------------------------------------------------------------------------

NAMEBASE=		python-meson-python
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		v13 v14
SDESC[v13]=		Meson Python build backend (PEP 517) (3.13)
SDESC[v14]=		Meson Python build backend (PEP 517) (3.14)
HOMEPAGE=		https://github.com/mesonbuild/meson-python
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPIWHL/16/7f/d1b0c65b267a1463d752b324f11d3470e30889daefc4b9ec83029bfa30b5
DISTFILE[1]=		meson_python-${PORTVERSION}-py3-none-any.whl:main
DIST_SUBDIR=		python-src

SPKGS[v13]=		single
SPKGS[v14]=		single

OPTIONS_AVAILABLE=	PY313 PY314
OPTIONS_STANDARD=	none
VOPTS[v13]=		PY313=ON PY314=OFF
VOPTS[v14]=		PY313=OFF PY314=ON

# License listed at PyPI
# Not provided.

GENERATED=		yes
DISTNAME=		meson_python-${PORTVERSION}.dist-info

# Requires-Dist extracted from wheel metadata
# meson>=0.64.0; python_version < "3.12"
# meson>=1.2.3; python_version >= "3.12"
# packaging>=23.2; sys_platform != "ios"
# packaging>=24.2; sys_platform == "ios"
# pyproject-metadata>=0.9.0
# tomli>=1.0.0; python_version < "3.11"

[PY313].USES_ON=			python:v13,wheel
[PY313].RUN_DEPENDS_ON=			python-packaging:single:v13
					python-pyproject-metadata:single:v13
[PY314].USES_ON=			python:v14,wheel
[PY314].RUN_DEPENDS_ON=			python-packaging:single:v14
					python-pyproject-metadata:single:v14

[PY313].BUILDRUN_DEPENDS_ON=		meson:single:v13
[PY314].BUILDRUN_DEPENDS_ON=		meson:single:v14

R_DEPS[linux]=		patchelf:primary:std

pre-install:
	${SED} -i'' -e "s|sys.platform == 'linux':|True:|" \
		${STAGEDIR}${PYTHON_SITELIBDIR}/mesonpy/_rpath.py
