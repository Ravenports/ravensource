DEF[PORTVERSION]=	3.0.10
DEF[SOVERSION]=		0.2.0
# ----------------------------------------------------------------------------

NAMEBASE=		gtkspell
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	Spell-checking addon for GTK's TextView widget
HOMEPAGE=		https://gtkspell.sourceforge.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/gtkspell/${PORTVERSION}
DISTFILE[1]=		gtkspell3-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2:primary
LICENSE_FILE=		GPLv2:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"GTKSPELL_H"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/gtkspell/gtkspell.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/gtkspell

BUILD_DEPENDS=		harfbuzz:dev:standard
BUILDRUN_DEPENDS=	enchant:single:standard
			fribidi:single:standard
			iso-codes:primary:standard

USES=			gmake libtool pkgconfig gettext-tools
GNOME_COMPONENTS=	gtk3 intltool gdkpixbuf cairo
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}
DISTNAME=		gtkspell3-${PORTVERSION}

post-patch:
	${REINPLACE_CMD} -e '/^SUBDIRS/ s|docs||' ${WRKSRC}/Makefile.in
