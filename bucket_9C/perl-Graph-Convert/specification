					perl-Graph-Easy-Manual:single:538
[PERL_540].USES_ON=			perl:540,buildmod,run
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Graph:single:540
					perl-Graph-Easy:single:540
					perl-Graph-Easy-As_svg:single:540
