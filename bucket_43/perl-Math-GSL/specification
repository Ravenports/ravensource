DEF[PORTVERSION]=	0.49
# ------------------------------------------------------------------------

NAMEBASE=		perl-Math-GSL
VERSION=		${PORTVERSION}
KEYWORDS=		perl
VARIANTS=		540 542
SDESC[540]=		Interface to the GNU Scientific Library (5.40)
SDESC[542]=		Interface to the GNU Scientific Library (5.42)
HOMEPAGE=		https://github.com/hakonhagland/perl-math-gsl/tree/master
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:H/HA/HAKONH
DISTFILE[1]=		Math-GSL-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# gpl_1

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Math-GSL-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Math::Complex (perl 5.40 core) (perl 5.42 core)
# |      runtime : Scalar::Util (perl 5.40 core) (perl 5.42 core)
# |      runtime : parent (perl 5.40 core) (perl 5.42 core)
# |      runtime : version (perl 5.40 core) (perl 5.42 core)
# |        build : Test::Class
# |        build : Test::Exception
# |        build : Test::More (perl 5.40 core) (perl 5.42 core)
# |        build : Test::Most
# |        build : Test::Taint
# |    configure : Math::GSL::Alien
# |    configure : Module::Build
# |    configure : PkgConfig

[PERL_540].USES_ON=			perl:540,buildmod,run
[PERL_540].BUILD_DEPENDS_ON=		perl-Test-Class:single:540
					perl-Test-Exception:single:540
					perl-Test-Most:single:540
					perl-Test-Taint:single:540
					perl-Math-GSL-Alien:single:540
					perl-Module-Build:single:540
					perl-PkgConfig:single:540
[PERL_542].USES_ON=			perl:542,buildmod,run
[PERL_542].BUILD_DEPENDS_ON=		perl-Test-Class:single:542
					perl-Test-Exception:single:542
					perl-Test-Most:single:542
					perl-Test-Taint:single:542
					perl-Math-GSL-Alien:single:542
					perl-Module-Build:single:542
					perl-PkgConfig:single:542

USES=			cclibs:single
BUILD_DEPENDS=		gsl:dev:std
			gsl:tools:std
BUILDRUN_DEPENDS=	gsl:primary:std
			perl-Role-Tiny:single:perl_used
			perl-Alien-Role-Dino:single:perl_used
INSTALL_REQ_TOOLCHAIN=	yes

post-patch:
	${REINPLACE_CMD} -e 's|@EXT1@|-Wl,-rpath,${PREFIX}/lib|' \
		-e 's|@EXT2@|-Wl,-rpath,${PREFIX}/lib/perl5/${PERL_VER}/${PERL_ARCH}/CORE|' \
		${WRKSRC}/inc/GSLBuilder.pm
	# support GSL 2.7.1 (not needed since v0.44)
	# ${REINPLACE_CMD} -e 's|"2.7"|"2.7.1"|' ${WRKSRC}/inc/Ver2Func.pm
