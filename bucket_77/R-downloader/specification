KEYWORDS=		cran
VARIANTS=		standard
SDESC[standard]=	Download Files over HTTP and HTTPS
HOMEPAGE=		https://github.com/wch/downloader
CONTACT=		CRAN_Automaton[cran@ironwolf.systems]

