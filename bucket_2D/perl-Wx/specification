DEF[PORTVERSION]=	0.9932
# ------------------------------------------------------------------------

NAMEBASE=		perl-Wx
VERSION=		${PORTVERSION}
KEYWORDS=		perl
VARIANTS=		540 542
SDESC[540]=		Interface to the wxWidgets GUI toolkit (5.40)
SDESC[542]=		Interface to the wxWidgets GUI toolkit (5.42)
HOMEPAGE=		http://svn.code.sf.net/p/wxperl/code/wxPerl
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:M/MD/MDOOTSON
DISTFILE[1]=		Wx-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# perl_5

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Wx-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Alien::wxWidgets
# |        build : Alien::wxWidgets
# |        build : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)
# |        build : ExtUtils::ParseXS (perl 5.40 core) (perl 5.42 core)
# |        build : ExtUtils::XSpp
# |        build : File::Spec::Functions (perl 5.40 core) (perl 5.42 core)
# |        build : Test::Harness (perl 5.40 core) (perl 5.42 core)
# |        build : Test::More (perl 5.40 core) (perl 5.42 core)
# |        build : if (perl 5.40 core) (perl 5.42 core)
# |    configure : Alien::wxWidgets

[PERL_540].USES_ON=			perl:540,configure
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Alien-wxWidgets:single:540
[PERL_540].BUILD_DEPENDS_ON=		perl-ExtUtils-XSpp:single:540
[PERL_542].USES_ON=			perl:542,configure
[PERL_542].BUILDRUN_DEPENDS_ON=		perl-Alien-wxWidgets:single:542
[PERL_542].BUILD_DEPENDS_ON=		perl-ExtUtils-XSpp:single:542

BUILD_DEPENDS=		wxWidgets30:dev:gtk2

CONFIGURE_ENV=		CXX="{{CXX}}"
CFLAGS=			-std=c++11 -pthread -Wno-write-strings

pre-build:
	(cd ${WRKSRC} && ${DO_MAKE_BUILD} generated)

post-configure:
	${FIND} ${WRKSRC} -name "Makefile" -type f | ${XARGS} \
		${REINPLACE_CMD} -e \
		's|$$(CC)|$$(CXX)|g ; \
		 s|$$(CCFLAGS)|$$(CXXFLAGS)|g'
