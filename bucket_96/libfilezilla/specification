# Don't commit upgrade without testing filezilla build first
# In general, don't upgrade until new version of filezilla arrives.
DEF[PORTVERSION]=	0.41.0
DEF[SOVERSION]=		34.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		libfilezilla
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		ftp
VARIANTS=		standard
SDESC[standard]=	C++ lib for building platform-independent programs
HOMEPAGE=		https://lib.filezilla-project.org
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.filezilla-project.org/libfilezilla/
DISTFILE[1]=		libfilezilla-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	complete primary dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:complete
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		complete:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^Documentation"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/README
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		ftp/libfilezilla

BUILD_DEPENDS=		gmp:static:standard
			gnutls:dev:standard
			gnutls:primary:standard
BUILDRUN_DEPENDS=	gnutls:library:standard
			nettle:primary:standard

USES=			gettext:build gmake iconv:wchar_t libtool pkgconfig
			zlib:build c++:primary
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip

SOVERSION=		${SOVERSION}
