NAMEBASE=		libfilezilla
VERSION=		${PORTVERSION}
KEYWORDS=		ftp
VARIANTS=		standard
SDESC[standard]=	C++ lib for building platform-independent programs
HOMEPAGE=		https://lib.filezilla-project.org
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://dl3.cdn.filezilla-project.org/libfilezilla/
DISTFILE[1]=		libfilezilla-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:single
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKSRC}}/TERMS
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		ftp/libfilezilla

USES=			c++:single gmake iconv:wchar_t libtool pkgconfig
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip

SOVERSION=		${SOVERSION}

post-extract:
	${AWK} '/section License/,/higher/' \
		${WRKSRC}/lib/libfilezilla/libfilezilla.hpp > ${WRKSRC}/TERMS
