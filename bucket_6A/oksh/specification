DEF[PORTVERSION]=	6.7
DEF[RELEASE_TAG]=	oksh-6.7
# ----------------------------------------------------------------------------

NAMEBASE=		oksh
VERSION=		${PORTVERSION}
KEYWORDS=		shells
VARIANTS=		standard
SDESC[standard]=	Portable OpenBSD Korn Shell
HOMEPAGE=		https://github.com/ibara/oksh
CONTACT=		Leonid_Bobrov[goleo@disroot.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/ibara:oksh:${RELEASE_TAG}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		PUBDOM:single
LICENSE_FILE=		PUBDOM:{{WRKSRC}}/LEGAL
LICENSE_AWK=		PUBDOM:"^\#include"
LICENSE_SOURCE=		PUBDOM:{{WRKSRC}}/sh.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		shells/oksh

USES=			ncurses
MUST_CONFIGURE=		yes
CONFIGURE_ARGS=		--disable-static
			--enable-curses
			--enable-ksh
			--bindir={{PREFIX}}/bin
			--mandir={{MANPREFIX}}/man
			--prefix={{PREFIX}}
CFLAGS=			-I{{NCURSESINC}}
LDFLAGS=		-L{{NCURSESLIB}} -ltinfo
