post-install-lua: [{
     args: ""
     code: <<EOS
local lease = pkg.prefixed_path("var/run/dhcpd/dhclient.leases")
local st = pkg.stat(lease)
if not st then
   local f = io.open(lease, "w")
   if f then
      f:close()
   end
end
EOS
}]
pre-deinstall-lua: [{
     args: ""
     code: <<EOS
local lease = pkg.prefixed_path("var/run/dhcpd/dhclient.leases")
local st = pkg.stat(lease)
if st and st.size == 0 then
   os.remove(lease)
end
EOS
}]
