DEF[PORTVERSION]=	1.3.4-2
DEF[PORTNAME]=		fltk
# ----------------------------------------------------------------------------

NAMEBASE=		${PORTNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11_toolkits
VARIANTS=		standard
SDESC[standard]=	Light-weight cross-platform C++ GUI toolkit
HOMEPAGE=		http://www.fltk.org/
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		http://fltk.org/pub/${PORTNAME}/${PORTVERSION}/
DISTFILE[1]=		${PORTNAME}-${PORTVERSION}-source.tar.gz:main

SPKGS[standard]=	complete primary examples

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		x11-toolkits/fltk

BUILDRUN_DEPENDS=	libGLU:single:standard
			desktop-file-utils:single:standard
			shared-mime-info:single:standard

USES=			gmake jpeg libtool pkgconfig png zlib
XORG_COMPONENTS=	x11 xcursor xext xfixes xft xinerama
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-shared --docdir=/raven/share/examples/fltk

post-stage:
	${MKDIR} /construction/fltk/stage/raven/share/examples/fltk
	${MV} /construction/fltk/stage/raven/share/doc/fltk/examples/* /construction/fltk/stage/raven/share/examples/fltk
	${RM} -r  /construction/fltk/stage/raven/share/doc
