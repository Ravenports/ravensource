DEF[PORTVERSION]=	2.27
# ----------------------------------------------------------------------------

NAMEBASE=		fossil
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		std
SDESC[std]=		Distributed source control management system
HOMEPAGE=		https://fossil-scm.org/
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://fossil-scm.org/home/tarball/version-${PORTVERSION}/
DISTFILE[1]=		fossil-src-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		BSD2CLAUSE:primary
LICENSE_FILE=		BSD2CLAUSE:{{WRKSRC}}/COPYRIGHT-BSD2.txt
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/fossil

DISTNAME=		fossil-src-${PORTVERSION}
USES=			cpe ssl tcl zlib
CPE_VENDOR=		fossil-scm
MUST_CONFIGURE=		yes
CONFIGURE_ARGS=		--prefix={{PREFIX}}
			--json
			--with-tcl={{PREFIX}}
			--with-th1-docs
			--with-th1-hooks

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/fossil ${STAGEDIR}${PREFIX}/bin
	${INSTALL_MAN} ${WRKSRC}/fossil.1 ${STAGEDIR}${MAN1PREFIX}/man/man1
