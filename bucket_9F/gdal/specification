			-DGDAL_USE_MRSID=OFF
			-DGDAL_USE_MSSQL_NCLI=OFF
			-DGDAL_USE_MSSQL_ODBC=OFF
			-DGDAL_USE_MYSQL=OFF
			-DGDAL_USE_NETCDF=OFF
			-DGDAL_USE_ODBC=OFF
			-DGDAL_USE_ODBCCPP=OFF
			-DGDAL_USE_OGDI=OFF
			-DGDAL_USE_OPENCL=OFF
			-DGDAL_USE_OPENSSL=OFF
			-DGDAL_USE_ORACLE=OFF
