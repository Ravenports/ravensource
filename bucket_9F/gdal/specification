post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/gdal[a-z_]*
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/gnm*
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/[nos]*
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libgdal.so
