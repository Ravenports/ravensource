DEF[PORTVERSION]=	3.2.2.1
DEF[SOVERSION]=		0.2.1
# ----------------------------------------------------------------------------

NAMEBASE=		wxWidgets
VERSION=		${PORTVERSION}
KEYWORDS=		x11_toolkits
VARIANTS=		standard
SDESC[standard]=	GUI toolkit with GTK+ bindings
HOMEPAGE=		https://www.wxwidgets.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/wxWidgets/wxWidgets/releases/download/v${PORTVERSION}/
DISTFILE[1]=		wxWidgets-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	complete primary nls dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		x11-toolkits/wxgtk32

BUILD_DEPENDS=		harfbuzz:dev:standard
			libmspack:dev:standard
			dbus:dev:standard
BUILDRUN_DEPENDS=	libmspack:primary:standard
			libGLU:single:standard

USES=			cpe gmake png jpeg tiff zlib mesa execinfo
			expat iconv pkgconfig gettext
XORG_COMPONENTS=	x11 sm xxf86vm xinerama
GNOME_COMPONENTS=	gtk3
CPE_VENDOR=		wxwidgets
CPE_PRODUCT=		wxwidgets
MUST_CONFIGURE=		gnu
CONFIGURE_ENV=		X11BASE="{{LOCALBASE}}"
			ac_cv_header_sys_inotify_h=no
CONFIGURE_ARGS=		--with-libpng=sys
			--with-libjpeg=sys
			--with-libtiff=sys
			--with-zlib=sys
			--with-expat=sys
			--with-opengl
			--with-libmspack
			--enable-backtrace
			--enable-graphics_ctx
			--enable-compat28
			--enable-compat30
			--with-gtk=3
SOVERSION=		${SOVERSION}

VAR_OPSYS[freebsd]=	CONFIGURE_ARGS=--enable-precomp-headers=no

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/share/locale/zh
