DEF[PORTVERSION]=	1.3.7
# ----------------------------------------------------------------------------

NAMEBASE=		xvid
VERSION=		${PORTVERSION}
REVISION=		2
KEYWORDS=		multimedia
VARIANTS=		std
SDESC[std]=		ISO MPEG-4 compliant video codec
HOMEPAGE=		https://www.xvid.com/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://downloads.xvid.com/downloads/
DISTFILE[1]=		xvidcore-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKDIR}}/xvidcore/LICENSE
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKDIR}}/xvidcore/src/xvid.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		multimedia/xvid

BUILD_DEPENDS=		nasm:primary:std

# the resulting objects from the asm don't link correctly on Solaris.
# nor on amd64 -- they are not PIC, but the ABI demands it
# big patch available from Gentoo, if someone is interested:
# http://bugs.gentoo.org/show_bug.cgi?id=90287

USES=			gmake
SINGLE_JOB=		yes
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-assembly
DISTNAME=		xvidcore/build/generic

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libxvidcore.so
