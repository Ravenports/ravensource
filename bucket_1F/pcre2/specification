DEF[PORTVERSION]=	10.42
DEF[SOVERSION]=		0.11.2
DEF[POSIXVERSION]=	3.0.4
DEF[POSIXMAJOR]=	${POSIXVERSION:R:R}
# ----------------------------------------------------------------------------

NAMEBASE=		pcre2
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Perl Compatible Regular Expressions, version 2
HOMEPAGE=		http://www.pcre.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/PhilipHazel/pcre2/releases/download/pcre2-${PORTVERSION}/
DISTFILE[1]=		pcre2-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary tools dev man docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		BSD3CLAUSE:primary
LICENSE_FILE=		BSD3CLAUSE:{{WRKSRC}}/LICENCE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/pcre2

BUILD_DEPENDS=		readline:primary:standard

EXRUN[tools]=		pcre2:primary:standard
			readline:primary:standard

USES=			autoreconf cpe libtool pkgconfig readline:build
CPE_VENDOR=		pcre
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-pcre2-16
			--enable-pcre2-32
			--enable-pcre2test-libreadline
			--disable-jit
PLIST_SUB=		POSIXVERSION=${POSIXVERSION}
			POSIXMAJOR=${POSIXMAJOR}
SOVERSION=		${SOVERSION}
