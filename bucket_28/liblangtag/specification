DEF[PORTVERSION]=	0.6.8
DEF[SOVERSION]=		1.4.2
# ----------------------------------------------------------------------------

NAMEBASE=		liblangtag
VERSION=		${PORTVERSION}
KEYWORDS=		textproc devel
VARIANTS=		std
SDESC[std]=		Library to access tags for language identification
HOMEPAGE=		https://gitlab.com/tagoh/liblangtag
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://gitlab.com/tagoh/liblangtag/-/releases/${PORTVERSION}/downloads/
DISTFILE[1]=		liblangtag-${PORTVERSION}.tar.bz2:main

SPKGS[std]=		set primary docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		devel/liblangtag

USES=			libtool pkgconfig iconv
GNOME_COMPONENTS=	libxml2
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-introspection
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}

post-install:
	${MV} ${STAGEDIR}${PREFIX}/share/gtk-doc/html/liblangtag \
		${STAGEDIR}${STD_DOCDIR}
	${RM} -r ${STAGEDIR}${PREFIX}/share/gtk-doc
