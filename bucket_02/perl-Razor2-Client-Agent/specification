VARIANTS=		540 542
SDESC[540]=		UI routines for razor agents (5.40)
SDESC[542]=		UI routines for razor agents (5.42)
HOMEPAGE=		https://github.com/toddr/Razor2-Client-Agent
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:T/TO/TODDR
DISTFILE[1]=		Razor2-Client-Agent-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# perl_5

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Razor2-Client-Agent-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Digest::SHA1
# |      runtime : File::Copy (perl 5.40 core) (perl 5.42 core)
# |      runtime : File::Spec (perl 5.40 core) (perl 5.42 core)
# |      runtime : Getopt::Long (perl 5.40 core) (perl 5.42 core)
# |      runtime : MIME::Base64 (perl 5.40 core) (perl 5.42 core)
# |      runtime : Test::More (perl 5.40 core) (perl 5.42 core)
# |      runtime : Time::HiRes (perl 5.40 core) (perl 5.42 core)
# |      runtime : URI::Escape
# |        build : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)
# |    configure : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)

[PERL_540].USES_ON=			perl:540,configure
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Digest-SHA1:single:540
					perl-URI:single:540
[PERL_542].USES_ON=			perl:542,configure
[PERL_542].BUILDRUN_DEPENDS_ON=		perl-Digest-SHA1:single:542
					perl-URI:single:542

post-install:
	# relocate stray man pages
	${MKDIR} ${STAGEDIR}${PREFIX}/${SITE_PERL_REL}/man/man5
	${MV} ${STAGEDIR}${MANPREFIX}/man/man5/razor* \
		${STAGEDIR}${PREFIX}/${SITE_PERL_REL}/man/man5/
