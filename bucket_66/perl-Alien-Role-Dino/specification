DEF[PORTVERSION]=	0.08
# ------------------------------------------------------------------------

NAMEBASE=		perl-Alien-Role-Dino
VERSION=		${PORTVERSION}
KEYWORDS=		perl
VARIANTS=		540 542
SDESC[540]=		Support for dynamic share Alien install (5.40)
SDESC[542]=		Support for dynamic share Alien install (5.42)
HOMEPAGE=		https://github.com/PerlAlien/Alien-Role-Dino
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:P/PL/PLICEASE
DISTFILE[1]=		Alien-Role-Dino-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# perl_5

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Alien-Role-Dino-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Alien::Base
# |      runtime : Alien::Build
# |      runtime : Alien::Build::Plugin
# |      runtime : Class::Method::Modifiers
# |      runtime : FFI::CheckLib
# |      runtime : Path::Tiny
# |      runtime : Role::Tiny
# |    configure : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)
# |         test : Alien::Base
# |         test : Test2::Mock (perl 5.40 core) (perl 5.42 core)
# |         test : Test2::V0 (perl 5.40 core) (perl 5.42 core)
# |         test : Test::Alien
# |         test : Test::Alien::Build

[PERL_540].USES_ON=			perl:540,configure
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Alien-Build:single:540
					perl-Class-Method-Modifiers:single:540
					perl-FFI-CheckLib:single:540
					perl-Path-Tiny:single:540
					perl-Role-Tiny:single:540
[PERL_542].USES_ON=			perl:542,configure
[PERL_542].BUILDRUN_DEPENDS_ON=		perl-Alien-Build:single:542
					perl-Class-Method-Modifiers:single:542
					perl-FFI-CheckLib:single:542
					perl-Path-Tiny:single:542
					perl-Role-Tiny:single:542

pre-configure:
	${SED} -e 's/freebsd/dragonfly/' ${WRKSRC}/lib/Alien/Role/Dino/freebsd.pm \
		> ${WRKSRC}/lib/Alien/Role/Dino/dragonfly.pm
	${SED} -e 's/freebsd/midnightbsd/' ${WRKSRC}/lib/Alien/Role/Dino/freebsd.pm \
		> ${WRKSRC}/lib/Alien/Role/Dino/midnightbsd.pm
