# Unstable version, required because of glibmm updates
DEF[PORTVERSION]=	5.6.0
DEF[SOVERSION]=		1.0.0
DEF[API]=		5.0
# ----------------------------------------------------------------------------

NAMEBASE=		libxmlxx
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		std
SDESC[std]=		API ${API} C++ wrapper for libxml2 parser library
HOMEPAGE=		https://github.com/libxmlplusplus/libxmlplusplus
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/libxmlplusplus:libxmlplusplus:${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[std]=		set primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21:primary
LICENSE_FILE=		LGPL21:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"__LIBXMLCPP_H"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/libxml++/libxml++.h
LICENSE_SCHEME=		solo

# FPC_EQUIVALENT=	none

USES=			gmake pkgconfig perl:build meson c++:primary
GNOME_COMPONENTS=	libxml2
DISTNAME=		libxmlplusplus-${PORTVERSION}
MESON_ARGS=		-Dbuild-tests=false
			-Dbuild-examples=false
			-Dbuild-documentation=false
INSTALL_TARGET=		install-strip
PLIST_SUB=		API="${API}"
SOVERSION=		${SOVERSION}
