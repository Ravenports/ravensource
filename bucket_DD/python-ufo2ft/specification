# Requires-Dist extracted from wheel metadata
# fonttools[ufo]>=4.58.5
# cffsubr>=0.3.0
# booleanOperations>=0.9.0
# fontMath>=0.9.3
# skia-pathops>=0.8.0; extra == "pathops"
# compreffor>=0.5.5; extra == "compreffor"

[PY312].USES_ON=			python:v12,wheel
