DEF[PORTVERSION]=	4.3.5
DEF[SOVERSION]=		5.2.5
# ----------------------------------------------------------------------------

NAMEBASE=		zeromq
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		net
VARIANTS=		std
SDESC[std]=		High-performance, asynchronous messaging library
HOMEPAGE=		https://zeromq.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/zeromq/libzmq/releases/download/v${PORTVERSION}/
DISTFILE[1]=		zeromq-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary dev man

OPTIONS_AVAILABLE=	NORM
OPTIONS_STANDARD=	none
OPT_ON[dragonfly]=	NORM
OPT_ON[freebsd]=	NORM
OPT_ON[linux]=		NORM
OPT_ON[midnightbsd]=	NORM

LICENSE=		MPL:primary
LICENSE_FILE=		MPL:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		net/libzmq4

BUILD_DEPENDS=		asciidoc:single:std
			libsodium:dev:std
			xmlto:primary:std
BUILDRUN_DEPENDS=	libsodium:primary:std

USES=			cpe gmake libtool pkgconfig mbsdfix
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--with-libsodium
			--with-pkgconfigdir={{LOCALBASE}}/lib/pkgconfig
			--without-pgm
			--disable-Werror
MAKE_ENV=		V=1
SOVERSION=		${SOVERSION}

[NORM].DESCRIPTION=			Build with multicast support via norm

[NORM].BUILDRUN_DEPENDS_ON=		norm:single:std
[NORM].CONFIGURE_ARGS_ON=		--with-norm={{LOCALBASE}}
[NORM].CONFIGURE_ARGS_OFF=		--without-norm
