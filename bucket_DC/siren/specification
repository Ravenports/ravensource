DEF[PORTVERSION]=	0.11
# ----------------------------------------------------------------------------

NAMEBASE=		siren
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		audio
VARIANTS=		std
SDESC[std]=		Text-based audio player
HOMEPAGE=		https://www.kariliq.nl/siren/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://www.kariliq.nl/siren/dist/
DISTFILE[1]=		siren-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		ISCL:primary
LICENSE_FILE=		ISCL:{{WRKSRC}}/LICENCE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		audio/siren

BUILD_DEPENDS=		ffmpeg:dev:std
			mpg123:dev:std
			libsndfile:dev:std
			opusfile:dev:std
			flac:dev:std
			libao:dev:std
			libmad:dev:std
			libid3tag:dev:std
			sndio:dev:std
			wavpack:dev:std
BUILDRUN_DEPENDS=	flac:primary:std
			ffmpeg:primary:std
			libao:primary:std
			libid3tag:primary:std
			libmad:primary:std
			libsndfile:primary:std
			libvorbis:primary:std
			mpg123:primary:std
			opusfile:primary:std
			sndio:primary:std
			wavpack:primary:std

USES=			ncurses pkgconfig zlib
CFLAGS=			-I{{NCURSESINC}}

MUST_CONFIGURE=		yes

CONFIGURE_ARGS=		aac=no
			alsa=no
			debug=no
			mandir={{MANPREFIX}}/man
			oss=no
			portaudio=no
			prefix={{PREFIX}}
			pulse=no
			sun=no

post-extract:
	${REINPLACE_CMD} -e 's|-lcurses|-lncurses -ltinfo|' ${WRKSRC}/configure
