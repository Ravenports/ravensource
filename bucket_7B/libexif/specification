DEF[PORTVERSION]=	0.6.22
DEF[RELEASE_TAG]=	libexif-${PORTVERSION:S/./_/g}-release
DEF[SOVERSION]=		12.3.4
# ----------------------------------------------------------------------------

NAMEBASE=		libexif
VERSION=		${PORTVERSION}
KEYWORDS=		graphics devel
VARIANTS=		standard
SDESC[standard]=	Library to access EXIF files (extended JPEG files)
HOMEPAGE=		http://libexif.sourceforge.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/libexif:libexif:${RELEASE_TAG}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/libexif/exif-utils.h
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/libexif

USES=			cpe autoreconf gmake libtool pkgconfig fbsd10fix
			gettext-runtime gettext-tools
CPE_VENDOR=		libexif_project
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-docs
			--enable-nls
SOVERSION=		${SOVERSION}

post-patch:
	${REINPLACE_CMD} -e '/^SUBDIRS/ s|doc||; /^doc_DATA/d' \
		${WRKSRC}/Makefile.am
