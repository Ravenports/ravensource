# Continued by Fabian Groffen officially (moved from github to gitlab)
DEF[PORTVERSION]=	2.4.0
DEF[TAG]=		v${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		html2text
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		std
SDESC[std]=		Converts HTML documents into plain text
HOMEPAGE=		http://www.mbayer.de/html2text/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://gitlab.com/grobian/html2text/-/archive/${TAG}/
DISTFILE[1]=		html2text-${TAG}.tar.gz:main

SPKGS[std]=		set primary man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^\#include"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/html2text.cpp
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/html2text

USES=			c++:primary iconv gmake bison
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		MANDIR={{MANPREFIX}}/man
CXXFLAGS=		-Wno-write-strings
			-Wno-deprecated-declarations
DISTNAME=		html2text-${TAG}

post-install:
	${RM} -r ${STAGEDIR}${STD_DOCDIR}
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/html2text
