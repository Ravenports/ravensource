DEF[PORTVERSION]=	3.6.0
# ----------------------------------------------------------------------------

NAMEBASE=		vimb
VERSION=		${PORTVERSION}
REVISION=		3
KEYWORDS=		www
VARIANTS=		standard
SDESC[standard]=	Vim-like browser
HOMEPAGE=		https://fanglingsu.github.io/vimb/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/fanglingsu:vimb:${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3+:single
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/LICENSE
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^\#include"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/main.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		www/vimb

BUILD_DEPENDS=		glib:dev:standard
			harfbuzz:dev:standard

USES=			desktop-utils:single gmake pkgconfig zlib:build
BUILDRUN_DEPENDS=	webkit2:complete:api40
CFLAGS=			-D_BSD_SOURCE
MAKE_ENV=		V=1
SINGLE_JOB=		yes

VAR_OPSYS[sunos]=	LDFLAGS=-lsocket
			LDFLAGS=-lnsl

post-extract:
	${MKDIR} ${WRKSRC}/.git
	${TOUCH} ${WRKSRC}/.git/index

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/vimb
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/vimb/webext_main.so

pre-configure-sunos:
	${REINPLACE_CMD} -e '/_XOPEN_SOURCE/ s/500/600/' ${WRKSRC}/config.mk
