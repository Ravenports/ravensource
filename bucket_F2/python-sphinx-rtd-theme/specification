# Requires-Dist extracted from wheel metadata
# sphinx <9,>=6
# docutils <0.22,>0.18
# sphinxcontrib-jquery <5,>=4
# transifex-client ; extra == 'dev'
# bump2version ; extra == 'dev'
# wheel ; extra == 'dev'
# twine ; extra == 'dev'

[PY313].USES_ON=			python:v13,wheel
[PY313].RUN_DEPENDS_ON=			python-Sphinx:single:v13
					python-docutils:single:v13
					python-sphinxcontrib-jquery:single:v13
[PY314].USES_ON=			python:v14,wheel
[PY314].RUN_DEPENDS_ON=			python-Sphinx:single:v14
					python-docutils:single:v14
					python-sphinxcontrib-jquery:single:v14

