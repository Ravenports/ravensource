DEF[PORTVERSION]=	7.0.0
DEF[SOVERSION]=		4.4.0
# ----------------------------------------------------------------------------

NAMEBASE=		libdvdnav
VERSION=		${PORTVERSION}
KEYWORDS=		multimedia
VARIANTS=		std
SDESC[std]=		DVD navigation library
HOMEPAGE=		http://dvdnav.mplayerhq.hu/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://code.videolan.org/videolan/libdvdnav/-/archive/${PORTVERSION}/
DISTFILE[1]=		libdvdnav-${PORTVERSION}.tar.bz2:main

SPKGS[std]=		set primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/dvdnav/dvdnav.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		multimedia/libdvdnav

BUILD_DEPENDS=		libdvdcss:dev:std
			libdvdread:dev:std
BUILDRUN_DEPENDS=	libdvdread:primary:std

EXRUN[dev]=		libdvdread:dev:std

USES=			meson pkgconfig mbsdfix
INSTALL_TARGET=		install-strip

SOVERSION=		${SOVERSION}

post-install:
	${RM} -r ${STAGEDIR}${STD_DOCDIR}
