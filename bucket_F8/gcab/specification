DEF[PORTVERSION]=	1.5
DEF[DL_FOLDER]=		1.5
DEF[SOVERSION]=		0.2.0
# ----------------------------------------------------------------------------

NAMEBASE=		gcab
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		archivers
VARIANTS=		standard
SDESC[standard]=	Cabinet file library and tool
HOMEPAGE=		https://wiki.gnome.org/msitools
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/gcab/${DL_FOLDER}
DISTFILE[1]=		gcab-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary nls docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^\#include"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/gcab.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		archivers/gcab

BUILD_DEPENDS=		vala:single:standard

USES=			cpe gettext-tools gmake libtool
			pkgconfig meson gtk-doc
GNOME_COMPONENTS=	glib intltool introspection
CPE_VENDOR=		gnome
MESON_ARGS=		-Dtests=false
SOVERSION=		${SOVERSION}

VAR_OPSYS[sunos]=	LDFLAGS=-lintl
