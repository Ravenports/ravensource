DEF[PORTVERSION]=	20240224
DEF[SUFFIX]=		de
DEF[LANGUAGE]=		German
DEF[INSTLOC]=		{{STAGEDIR}}{{PREFIX}}/share/hunspell
# ----------------------------------------------------------------------------

NAMEBASE=		hunspell-${SUFFIX}
VERSION=		${PORTVERSION}
KEYWORDS=		textproc german
VARIANTS=		std
SDESC[std]=		Hunspell ${LANGUAGE} dictionary
HOMEPAGE=		https://www.j3e.de/ispell/igerman98/
CONTACT=		nobody

# recipe: https://src.fedoraproject.org/rpms/hunspell-de/blob/rawhide/f/hunspell-de.spec
# https://cgit.freedesktop.org/libreoffice/dictionaries/plain/de
DOWNLOAD_GROUPS=	main
SITES[main]=		https://leaf.dragonflybsd.org/~marino/raven-distfiles/
DISTFILE[1]=		dict-de-20240224.tar.gz:main

SPKGS[std]=		single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		german/hunspell

LICENSE=		GPLv2:single GPLv3:single
LICENSE_FILE=		GPLv2:{{WRKSRC}}/COPYING_GPLv2
			GPLv3:{{WRKSRC}}/COPYING_GPLv3
LICENSE_TERMS=		single:{{WRKSRC}}/README_de_DE_frami.txt
LICENSE_SCHEME=		dual

SKIP_BUILD=		yes
DISTNAME=		dict-de-${PORTVERSION}

do-install:
	${MKDIR} ${INSTLOC}
	${MKDIR} ${STAGEDIR}${PREFIX}/share/hunspell-de
.for CC in AT CH DE
	${INSTALL_DATA} ${WRKSRC}/de_${CC}_frami.aff ${INSTLOC}/de_${CC}.aff
	${INSTALL_DATA} ${WRKSRC}/de_${CC}_frami.dic ${INSTLOC}/de_${CC}.dic
.endfor
.for ALIAS in de_LI
	${LN} -sf de_CH.aff ${INSTLOC}/${ALIAS}.aff
	${LN} -sf de_CH.dic ${INSTLOC}/${ALIAS}.dic
.endfor
.for ALIAS in de_BE de_LU
	${LN} -sf de_DE.aff ${INSTLOC}/${ALIAS}.aff
	${LN} -sf de_DE.dic ${INSTLOC}/${ALIAS}.dic
.endfor
	${INSTALL_DATA} ${WRKSRC}/README_extension_owner.txt \
		${STAGEDIR}${PREFIX}/share/hunspell-de/
