+CheckSndio()
+{
+if test "x${enable_sndio}" = "xyes"; then :
+  SOURCES="$SOURCES $srcdir/src/audio/sndio/SDL_sndioaudio.c"
+  EXTRA_CFLAGS="$EXTRA_CFLAGS -DSDL_AUDIO_DRIVER_SNDIO=1"
+  EXTRA_LDFLAGS="$EXTRA_LDFLAGS -lsndio"
+  have_audio=yes
+fi
+}
 
