DEF[PORTVERSION]=	0.311
# ----------------------------------------------------------------------------

NAMEBASE=		cantarell-fonts
VERSION=		${PORTVERSION}
KEYWORDS=		x11_fonts
VARIANTS=		std
SDESC[std]=		Contemporary Humanist sans serif typeface family
HOMEPAGE=		https://cantarell.gnome.org/
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

# has to be cached because
# https://gitlab.gnome.org/GNOME/cantarell-fonts/ downloads change every time

DOWNLOAD_GROUPS=	main
SITES[main]=		https://leaf.dragonflybsd.org/~marino/raven-distfiles/
DISTFILE[1]=		cantarell-fonts-${PORTVERSION}.tar.gz:main
DIST_SUBDIR=		gnome3

SPKGS[std]=		single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		CUSTOM1:single
LICENSE_NAME=		CUSTOM1:"SIL OPEN FONT LICENSE Version 1.1"
LICENSE_FILE=		CUSTOM1:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11-fonts/cantarell-fonts

BUILD_DEPENDS=		appstream-glib:dev:std
			appstream-glib:primary:std
			python-uharfbuzz:single:python_default
			python-ufo2ft:single:python_default
			python-ufoLib2:single:python_default

USES=			fontconfig fonts gettext:build meson

FONTNAME=		cantarell
