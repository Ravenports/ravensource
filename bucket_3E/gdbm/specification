DEF[PORTVERSION]=	1.23
DEF[SOVERSION]=		6.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		gdbm
VERSION=		${PORTVERSION}
KEYWORDS=		databases
VARIANTS=		standard
SDESC[standard]=	GNU database manager
HOMEPAGE=		http://www.gnu.org/software/gdbm/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/gdbm
DISTFILE[1]=		gdbm-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary dev tools nls man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"Protection for multiple"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/gdbm.h.in
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		databases/gdbm

BUILD_DEPENDS=		readline:primary:standard

EXRUN[tools]=		gdbm:primary:standard
			readline:primary:standard

USES=			gmake libtool solfix readline:build gettext
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-libgdbm-compat
			--enable-static
			--enable-shared
			--enable-nls
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
INFO=			tools:gdbm
SOVERSION=		${SOVERSION}

pre-configure:
	${REINPLACE_CMD} -e "s|LIBS = @LIBS@ -lc|LIBS = @LIBS@|" \
		-e "s|BINOWN = bin|BINOWN = root|" \
		-e "s|BINGRP = bin|BINGRP = wheel|" \
		-e "s|libgdbm.la libgdbm_compat.la|& gdbm.info|" \
			${WRKSRC}/Makefile.in
