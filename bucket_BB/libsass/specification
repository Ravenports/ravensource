DEF[PORTVERSION]=	3.6.4
DEF[SOVERSION]=		1.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		libsass
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	C/C++ implementation of a Sass compiler
HOMEPAGE=		https://sass-lang.com/libsass
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/sass:libsass:${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/libsass

USES=			autoreconf gmake libtool c++:single
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-static
INSTALL_TARGET=		install-strip
MAKEFILE=		GNUmakefile
SOVERSION=		${SOVERSION}

post-patch:
	${ECHO_CMD} "${ECHO_CMD} \"${PORTVERSION}\"" > ${WRKSRC}/version.sh
