DEF[PORTVERSION]=	1.19.0
# ------------------------------------------------------------------------

NAMEBASE=		ruby-nokogiri
VERSION=		${PORTVERSION}
KEYWORDS=		ruby
VARIANTS=		v33 v34 v40
SDESC[v33]=		HTML/XML/SAX/Reader parser (v33)
SDESC[v34]=		HTML/XML/SAX/Reader parser (v34)
SDESC[v40]=		HTML/XML/SAX/Reader parser (v40)
HOMEPAGE=		https://nokogiri.org
CONTACT=		Ruby_Automaton[ruby@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		RUBYGEMS/
DISTFILE[1]=		nokogiri-1.19.0.gem:main
DIST_SUBDIR=		ruby

SPKGS[v33]=		single
SPKGS[v34]=		single
SPKGS[v40]=		single

OPTIONS_AVAILABLE=	RUBY33 RUBY34 RUBY40
OPTIONS_STANDARD=	none
VOPTS[v33]=		RUBY33=ON RUBY34=OFF RUBY40=OFF
VOPTS[v34]=		RUBY33=OFF RUBY34=ON RUBY40=OFF
VOPTS[v40]=		RUBY33=OFF RUBY34=OFF RUBY40=ON

# License listed inside gem specification
# => UNSET

# Requirements according to gem specification:
#   mini_portile2 (~> 2.8.2)
#   racc (~> 1.4)

DISTNAME=		nokogiri-${PORTVERSION}
GENERATED=		yes

[RUBY33].USES_ON=			gem:v33
[RUBY33].BUILDRUN_DEPENDS_ON=		ruby-mini_portile2:single:v33
					ruby-racc:single:v33
[RUBY34].USES_ON=			gem:v34
[RUBY34].BUILDRUN_DEPENDS_ON=		ruby-mini_portile2:single:v34
					ruby-racc:single:v34
[RUBY40].USES_ON=			gem:v40
[RUBY40].BUILDRUN_DEPENDS_ON=		ruby-mini_portile2:single:v40

BUILD_DEPENDS=		libgcrypt:dev:std
BUILDRUN_DEPENDS=	libgcrypt:primary:std
USES=			cpe pkgconfig zlib
CPE_VENDOR=		nokogiri
CPE_PRODUCT=		nokogiri
GNOME_COMPONENTS=	libxml2 libxslt
CONFIGURE_ARGS=		--use-system-libraries
			--with-cppflags="-Wno-attributes -I{{LOCALBASE}}/include/libxml2"
