NAMEBASE=		ruby-pleaserun
VERSION=		${PORTVERSION}
KEYWORDS=		ruby
VARIANTS=		v33 v34 v40
SDESC[v33]=		Startup and service script generator (v33)
SDESC[v34]=		Startup and service script generator (v34)
SDESC[v40]=		Startup and service script generator (v40)
HOMEPAGE=		https://github.com/jordansissel/pleaserun
CONTACT=		Ruby_Automaton[ruby@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		RUBYGEMS/
DISTFILE[1]=		pleaserun-0.0.33.gem:main
DIST_SUBDIR=		ruby

SPKGS[v33]=		single
SPKGS[v34]=		single
SPKGS[v40]=		single

OPTIONS_AVAILABLE=	RUBY33 RUBY34 RUBY40
OPTIONS_STANDARD=	none
VOPTS[v33]=		RUBY33=ON RUBY34=OFF RUBY40=OFF
VOPTS[v34]=		RUBY33=OFF RUBY34=ON RUBY40=OFF
VOPTS[v40]=		RUBY33=OFF RUBY34=OFF RUBY40=ON

# License listed inside gem specification
# => UNSET

# Requirements according to gem specification:
#   cabin (> 0)
#   clamp (>= 0)
#   stud (>= 0)
#   mustache (= 0.99.8)
#   insist (>= 0)
#   dotenv (~> 2)

DISTNAME=		pleaserun-${PORTVERSION}
GENERATED=		yes

[RUBY33].USES_ON=			gem:v33
[RUBY33].BUILDRUN_DEPENDS_ON=		ruby-cabin:single:v33
					ruby-clamp:single:v33
					ruby-stud:single:v33
					ruby-mustache:single:v33
					ruby-insist:single:v33
					ruby-dotenv:single:v33
[RUBY34].USES_ON=			gem:v34
[RUBY34].BUILDRUN_DEPENDS_ON=		ruby-cabin:single:v34
					ruby-clamp:single:v34
					ruby-stud:single:v34
					ruby-mustache:single:v34
					ruby-insist:single:v34
					ruby-dotenv:single:v34
[RUBY40].USES_ON=			gem:v40
[RUBY40].BUILDRUN_DEPENDS_ON=		ruby-cabin:single:v40
					ruby-clamp:single:v40
					ruby-stud:single:v40
					ruby-mustache:single:v40
					ruby-insist:single:v40
					ruby-dotenv:single:v40

post-patch:
	# Allow to work with latest mustache
	${REINPLACE_CMD} '/mustache/ s|= 0.99.8|>= 0|' \
		${WRKSRC}/pleaserun.gemspec
