DEF[PORTVERSION]=	1.12.2
DEF[SOVERSION]=		1.4.0
DEF[API]=		1.0
# ----------------------------------------------------------------------------

NAMEBASE=		cairomm10
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	C++ API for the cairo graphics library
HOMEPAGE=		https://www.cairographics.org/cairomm/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://cairographics.org/releases/
DISTFILE[1]=		cairomm-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/cairomm/cairomm.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/cairomm

BUILD_DEPENDS=		glib:dev:standard
BUILDRUN_DEPENDS=	freetype:primary:standard

EXRUN[dev]=		fontconfig:dev:standard
			libsigcxx2:dev:standard

USES=			gmake pkgconfig png libtool zlib:build
GNOME_COMPONENTS=	cairo libsigc++20
XORG_COMPONENTS=	x11 xext xrender
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-documentation
CONFIGURE_ENV=		AUTOMAKE="{{TRUE}}"
			AUTOCONF="{{TRUE}}"
			DOXYGEN="{{TRUE}}"
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}
PLIST_SUB=		API=${API}
DISTNAME=		cairomm-${PORTVERSION}
