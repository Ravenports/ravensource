NAMEBASE=		libmount
VERSION=		${PORTVERSION}
KEYWORDS=		sysutils
VARIANTS=		std
SDESC[std]=		Library to parse mount configurations
HOMEPAGE=		https://github.com/karelzak/util-linux
CONTACT=		nobody

