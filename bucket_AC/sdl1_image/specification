DEF[PORTVERSION]=	1.2.12
# ----------------------------------------------------------------------------

NAMEBASE=		sdl1_image
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Load images of various formats as SDL surfaces
HOMEPAGE=		http://www.libsdl.org/projects/SDL_image/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://www.libsdl.org/projects/SDL_image/release/
DISTFILE[1]=		SDL_image-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		graphics/sdl_image

BUILDRUN_DEPENDS=	WebP:single:standard

USES=			cpe gmake libtool pkgconfig jpeg png tiff fbsd10fix
CPE_VENDOR=		sdl
CPE_PRODUCT=		sdl_image
SDL_COMPONENTS=		sdl1
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-jpg
			--enable-png
			--enable-tif
			--enable-webp
LDFLAGS=		-lm
DISTNAME=		SDL_image-${PORTVERSION}
INSTALL_TARGET=		install-strip

post-install:
	${INSTALL_PROGRAM} ${WRKSRC}/.libs/showimage \
		${STAGEDIR}${PREFIX}/bin
