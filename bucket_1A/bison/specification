DEF[PORTVERSION]=	3.8.2
# ----------------------------------------------------------------------------

NAMEBASE=		bison
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Yacc-compatible parser generator from FSF
HOMEPAGE=		https://www.gnu.org/software/bison/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/bison
DISTFILE[1]=		bison-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary examples nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3+:primary
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"<config.h>"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/main.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/bison

BUILDRUN_DEPENDS=	m4:primary:standard

USES=			cpe charsetfix perl:build gettext:build iconv:build
CPE_VENDOR=		gnu
INFO=			primary:bison
CONFIGURE_ARGS=		--disable-yacc
			--enable-nls
CONFIGURE_ENV=		ac_cv_path_M4={{LOCALBASE}}/bin/gm4
MUST_CONFIGURE=		gnu
TEST_TARGET=		check

post-extract:
	# For non-linux, make iconv available statically
	if [ -f "${LOCALBASE}/lib/libiconv.so" ]; then \
	   ${RM} ${LOCALBASE}/lib/libiconv.so; \
	   ${MV} ${LOCALBASE}/lib/libiconv_pic.a ${LOCALBASE}/lib/libiconv.a; \
	fi

pre-configure:
	${REINPLACE_CMD} -e 's|$$(docdir)\(/examples\)|$$(datarootdir)\1/bison|' \
		${WRKSRC}/Makefile.in

pre-configure-sunos:
	${REINPLACE_CMD} -e '/^#!/ s|/bin/sh|/bin/bash|' ${WRKSRC}/configure
	${TOUCH} ${WRKSRC}/doc/bison.1

post-install:
	# no value added
	${RM} -r ${STAGEDIR}${STD_DOCDIR}
