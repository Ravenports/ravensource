DEF[SOVERSION]=		26.0.0
DEF[PORTVERSION]=	${SOVERSION}
DEF[RELEASE_TAG]=	v${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		AdaSAT
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		math ada
VARIANTS=		std
SDESC[std]=		Implementation of a DPLL-based SAT solver in Ada
HOMEPAGE=		https://github.com/AdaCore/AdaSAT
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/AdaCore:AdaSAT:${RELEASE_TAG}
DISTFILE[1]=		generated:main

SPKGS[std]=		set primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		APACHE20:primary
LICENSE_FILE=		APACHE20:{{WRKSRC}}/LICENSE
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/adasat.ads
LICENSE_SCHEME=		solo

USES=			gprbuild gmake ada:primary
MAKE_ARGS=		BUILD_MODE=dev
			PROCESSORS={{MAKE_JOBS_NUMBER}}
			INSTALL_DIR={{STAGEDIR}}{{PREFIX}}
BUILD_TARGET=		all-libs
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}

pre-configure:
	${REINPLACE_CMD} -e 's|%%SOVERSION%%|${SOVERSION}|' ${WRKSRC}/adasat.gpr

post-install:
	# Fix non-standard placement of shared libraries
	${RM} ${STAGEDIR}${PREFIX}/lib/libadasat.so*
	${RM} ${STAGEDIR}${PREFIX}/lib/adasat.relocatable/libadasat.so
	${MV} ${STAGEDIR}${PREFIX}/lib/adasat.relocatable/libadasat.so.${SOVERSION} \
		${STAGEDIR}${PREFIX}/lib/
	${LN} -s libadasat.so.${SOVERSION} ${STAGEDIR}${PREFIX}/lib/libadasat.so
	${LN} -s ../libadasat.so.${SOVERSION} ${STAGEDIR}${PREFIX}/lib/adasat.relocatable/libadasat.so
	${LN} -s ../libadasat.so.${SOVERSION} ${STAGEDIR}${PREFIX}/lib/adasat.relocatable/libadasat.so.${SOVERSION}

	# strip library
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libadasat.so
