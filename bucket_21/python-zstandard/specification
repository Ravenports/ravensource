VOPTS[v13]=		PY313=ON PY314=OFF
VOPTS[v14]=		PY313=OFF PY314=ON

# License listed at PyPI
# Not provided.

GENERATED=		yes
DISTNAME=		zstandard-${PORTVERSION}

# Requires-Dist extracted from pyproject.toml file
# build: cffi~=1.17; platform_python_implementation != 'PyPy' and python_version < '3.14'
# build: cffi>=2.0.0b; platform_python_implementation != 'PyPy' and python_version >= '3.14'
# build: packaging

[PY313].USES_ON=			python:v13,pep517
