DEF[PORTVERSION]=	8.1.2
# ------------------------------------------------------------------------

NAMEBASE=		ruby-railties
VERSION=		${PORTVERSION}
KEYWORDS=		ruby
VARIANTS=		v33 v34 v40
SDESC[v33]=		Rails bootup, plugins and other internals (v33)
SDESC[v34]=		Rails bootup, plugins and other internals (v34)
SDESC[v40]=		Rails bootup, plugins and other internals (v40)
HOMEPAGE=		https://rubyonrails.org
CONTACT=		Ruby_Automaton[ruby@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		RUBYGEMS/
DISTFILE[1]=		railties-8.1.2.gem:main
DIST_SUBDIR=		ruby

SPKGS[v33]=		single
SPKGS[v34]=		single
SPKGS[v40]=		single

OPTIONS_AVAILABLE=	RUBY33 RUBY34 RUBY40
OPTIONS_STANDARD=	none
VOPTS[v33]=		RUBY33=ON RUBY34=OFF RUBY40=OFF
VOPTS[v34]=		RUBY33=OFF RUBY34=ON RUBY40=OFF
VOPTS[v40]=		RUBY33=OFF RUBY34=OFF RUBY40=ON

# License listed inside gem specification
# => UNSET

# Requirements according to gem specification:
#   activesupport (= 8.1.2)
#   actionpack (= 8.1.2)
#   rackup (>= 1.0.0)
#   rake (>= 12.2)
#   thor (~> 1.0, >= 1.2.2)
#   zeitwerk (~> 2.6)
#   irb (~> 1.13)
#   tsort (>= 0.2)
#   actionview (= 8.1.2, development)

DISTNAME=		railties-${PORTVERSION}
GENERATED=		yes

[RUBY33].USES_ON=			gem:v33
[RUBY33].BUILDRUN_DEPENDS_ON=		ruby-activesupport:single:v33
					ruby-actionpack:single:v33
					ruby-rackup:single:v33
					ruby-rake:single:v33
					ruby-thor:single:v33
					ruby-zeitwerk:single:v33
					ruby-tsort:single:v33
[RUBY34].USES_ON=			gem:v34
