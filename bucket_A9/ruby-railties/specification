					ruby-actionpack:single:v34
					ruby-rackup:single:v34
					ruby-rake:single:v34
					ruby-thor:single:v34
					ruby-zeitwerk:single:v34
					ruby-tsort:single:v34
[RUBY40].USES_ON=			gem:v40
[RUBY40].BUILDRUN_DEPENDS_ON=		ruby-activesupport:single:v40
					ruby-actionpack:single:v40
					ruby-rackup:single:v40
					ruby-rake:single:v40
					ruby-thor:single:v40
