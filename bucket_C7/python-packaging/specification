NAMEBASE=		python-packaging
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		v13 v14
SDESC[v13]=		Core utilities for Python packages (3.13)
SDESC[v14]=		Core utilities for Python packages (3.14)
HOMEPAGE=		https://github.com/pypa/packaging
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPIWHL/b7/b9/c538f279a4e237a006a2c98387d081e9eb060d203d8ed34467cc0f0b9b53
DISTFILE[1]=		packaging-${PORTVERSION}-py3-none-any.whl:main
DIST_SUBDIR=		python-src

SPKGS[v13]=		single
SPKGS[v14]=		single

OPTIONS_AVAILABLE=	PY313 PY314
OPTIONS_STANDARD=	none
VOPTS[v13]=		PY313=ON PY314=OFF
VOPTS[v14]=		PY313=OFF PY314=ON

# License listed at PyPI
# Not provided.

GENERATED=		yes
DISTNAME=		packaging-${PORTVERSION}.dist-info

# Requires-Dist extracted from wheel metadata


[PY313].USES_ON=			python:v13,wheel
[PY314].USES_ON=			python:v14,wheel

post-stage:
	# Revert ill-conceived limit of pyparsing version 2
	# This was already done upstream
	${SED} -i'' -e '/Requires-Dist:/ s|<3,||' \
	${STAGEDIR}${PREFIX}/lib/python*/site-packages/packaging-*.dist-info/METADATA
