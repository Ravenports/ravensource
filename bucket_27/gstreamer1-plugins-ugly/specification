DEF[PORTVERSION]=	EXTRACT_INFO(GSTREAMER1_VERSION)
DEF[GST_VERSION]=	EXTRACT_INFO(GSTREAMER1_GST)
DEF[SOVERSION]=		EXTRACT_INFO(GSTREAMER1_SOVERSION)
DEF[BUILD_DIRS]=	gst po gst-libs
# ----------------------------------------------------------------------------

NAMEBASE=		gstreamer1-plugins-ugly
VERSION=		${PORTVERSION}
KEYWORDS=		multimedia
VARIANTS=		standard
SDESC[standard]=	GStreamer1 plugins with potential dist. problems
HOMEPAGE=		https://gstreamer.freedesktop.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://gstreamer.freedesktop.org/src/gst-plugins-ugly/
DISTFILE[1]=		gst-plugins-ugly-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20+:primary
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/gst/asfdemux/gstasf.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		multimedia/gstreamer1-plugins-ugly

BUILD_DEPENDS=		gstreamer1:dev:standard
			gstreamer1-plugins-base:dev:standard
BUILDRUN_DEPENDS=	gstreamer1:primary:standard
			gstreamer1-plugins-base:primary:standard

USES=			gmake pkgconfig meson gettext-tools
GNOME_COMPONENTS=	glib
# GNOME_COMPONENTS=introspection disabled on gstreamer1
MESON_ARGS=		-Dasfdemux=enabled
			-Ddvdlpcmdec=enabled
			-Ddvdsub=enabled
			-Drealmedia=enabled
# external dependencies required
			-Da52dec=disabled
			-Damrnb=disabled
			-Damrwbdec=disabled
			-Dcdio=disabled
			-Ddvdread=disabled
			-Dmpeg2dec=disabled
			-Dsidplay=disabled
			-Dx264=disabled
			-Ddoc=disabled
			-Dnls=enabled
			-Dtests=disabled
			-Dorc=disabled
DISTNAME=		gst-plugins-ugly-${PORTVERSION}
PLIST_SUB=		GSTVER=${GST_VERSION}
SOVERSION=		${SOVERSION}
