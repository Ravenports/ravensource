SITES[main]=		CPAN/ID:G/GS/GSB
DISTFILE[1]=		Starlink-AST-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# gpl_2

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Starlink-AST-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Astro::FITS::CFITSIO
# |      runtime : Astro::FITS::Header
# |      runtime : Tk
# |      runtime : Tk::Zinc
# |        build : ExtUtils::CBuilder (perl 5.40 core) (perl 5.42 core)
# |        build : Test::Deep
# |        build : Test::More (perl 5.40 core) (perl 5.42 core)
# |        build : Test::Number::Delta
# |    configure : Module::Build

[PERL_540].USES_ON=			perl:540,buildmod,run
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Astro-FITS-CFITSIO:single:540
					perl-Astro-FITS-Header:single:540
					perl-Tk:single:540
					perl-Tk-Zinc:single:540
[PERL_540].BUILD_DEPENDS_ON=		perl-Test-Deep:single:540
					perl-Test-Number-Delta:single:540
					perl-Module-Build:single:540
[PERL_542].USES_ON=			perl:542,buildmod,run
[PERL_542].BUILDRUN_DEPENDS_ON=		perl-Astro-FITS-CFITSIO:single:542
					perl-Astro-FITS-Header:single:542
					perl-Tk:single:542
					perl-Tk-Zinc:single:542
[PERL_542].BUILD_DEPENDS_ON=		perl-Test-Deep:single:542
					perl-Test-Number-Delta:single:542
					perl-Module-Build:single:542

