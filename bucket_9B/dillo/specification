DEF[PORTVERSION]=	3.0.5
DEF[PORTNAME]=		dillo
# ----------------------------------------------------------------------------

NAMEBASE=		${PORTNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		www
VARIANTS=		standard
SDESC[standard]=	Simple and small web browser using FLTK
HOMEPAGE=		http://www.dillo.org
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		http://www.dillo.org/download/
DISTFILE[1]=		${PORTNAME}-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	COOKIES IPV6 SSL
OPTIONS_STANDARD=	COOKIES IPV6 SSL
OPT_ON[all]=		COOKIES SSL

FPC_EQUIVALENT=		www/dillo2

BUILDRUN_DEPENDS=	fltk:primary:standard
RUN_DEPENDS=		wget:primary:standard

USES=			gmake iconv pkgconfig
MUST_CONFIGURE=		gnu

[COOKIES].CONFIGURE_ARGS_OFF=		--disable-cookies
[COOKIES].DESCRIPTION=			Cookie support

[IPV6].CONFIGURE_ARGS_ON=		--enable-ipv6
[IPV6].DESCRIPTION=			IPV6 capability

[SSL].CONFIGURE_ARGS_ON=		--enable-ssl
[SSL].DESCRIPTION=			Experimental HTTPS protocol support
[SSL].USES_ON=				ssl
