DEF[PORTVERSION]=	36.3.0
# ------------------------------------------------------------------------

NAMEBASE=		python-setuptools
VERSION=		${PORTVERSION}
KEYWORDS=		python devel sysutils
VARIANTS=		py27 py36 py35
SDESC[py27]=		Easily download, build, install, upgrade,  (PY 27)
SDESC[py36]=		Easily download, build, install, upgrade,  (PY 36)
SDESC[py35]=		Easily download, build, install, upgrade,  (PY 35)
HOMEPAGE=		https://github.com/pypa/setuptools
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/s/setuptools
DISTFILE[1]=		setuptools-${PORTVERSION}.zip:main

SPKGS[py27]=		single
SPKGS[py36]=		single
SPKGS[py35]=		single

OPTIONS_AVAILABLE=	PY27 PY35 PY36
OPTIONS_STANDARD=	none
VOPTS[py27]=		PY27=ON PY36=OFF PY35=OFF
VOPTS[py36]=		PY27=OFF PY36=ON PY35=OFF
VOPTS[py35]=		PY27=OFF PY36=OFF PY35=ON

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/py27-setuptools

DISTNAME=		setuptools-${PORTVERSION}
PLIST_SUB=		STVER=${PORTVERSION}

[PY27].BUILDRUN_DEPENDS_ON=		python27:single:standard
[PY36].BUILDRUN_DEPENDS_ON=		python36:single:standard
[PY35].BUILDRUN_DEPENDS_ON=		python35:single:standard

[PY27].MAKEFILE_ON=			PYTHON_CMD={{LOCALBASE}}/bin/python2.7
[PY36].MAKEFILE_ON=			PYTHON_CMD={{LOCALBASE}}/bin/python3.6
[PY35].MAKEFILE_ON=			PYTHON_CMD={{LOCALBASE}}/bin/python3.5

[PY27].PLIST_SUB_ON=			PYVER=2.7 SITEPKG=lib/python2.7/site-packages
[PY36].PLIST_SUB_ON=			PYVER=3.6 SITEPKG=lib/python3.6/site-packages
[PY35].PLIST_SUB_ON=			PYVER=3.5 SITEPKG=lib/python3.5/site-packages

# Maintain this port manually.
# The port version is being maintained at 32.2.0 rather than the latest
# due to bootstrapping violations with the latest (e.g. setuptools requires
# six and six requires setuptools)

MAKE_ENV=		LDSHARED="{{CC}} -shared"
			PYTHONDONTWRITEBYTECODE=
			PYTHONOPTIMIZE=
# SETUPTOOLS_DISABLE_VERSIONED_EASY_INSTALL_SCRIPT=1

do-configure:
	@(cd ${BUILD_WRKSRC} && ${SETENV} ${MAKE_ENV} \
		${PYTHON_CMD} ${PYDISTUTILS_SETUP} config)

do-build:
	@(cd ${BUILD_WRKSRC} && ${SETENV} ${MAKE_ENV} \
		${PYTHON_CMD} ${PYDISTUTILS_SETUP} build)

do-install:
	@(cd ${INSTALL_WRKSRC} && ${SETENV} ${MAKE_ENV} \
		${PYTHON_CMD} ${PYDISTUTILS_SETUP} install \
		--record ${WRKDIR}/.PLIST.pymodtmp -c -O1 \
		--prefix=${PREFIX} --single-version-externally-managed \
		--root=${STAGEDIR})
	${RM} ${STAGEDIR}${PREFIX}/bin/easy_install
