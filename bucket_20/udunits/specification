# USES=			autoreconf libtool makeinfo
USES=			libtool makeinfo
MUST_CONFIGURE=		gnu
CONFIGURE_ENV=		ac_cv_header_CUnit_CUnit_h=no
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}
INFO=			primary:udunits2
			primary:udunits2lib
			primary:udunits2prog
CFLAGS=			-std=c17

post-install:
	${RM} ${STAGEDIR}${STD_DOCDIR}/COPYRIGHT
