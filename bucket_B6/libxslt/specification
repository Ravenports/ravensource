DEF[PORTVERSION]=	EXTRACT_INFO(LIBXSLT_VERSION)
DEF[PORTREVISION]=	EXTRACT_INFO(LIBXSLT_REVISION)
DEF[EXSLTVERSION]=	0.8.24
DEF[FOLDER]=		${PORTVERSION:R}
DEF[SOVERSION]=		${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		libxslt
VERSION=		${PORTVERSION}
REVISION=		${PORTREVISION}
KEYWORDS=		textproc
VARIANTS=		std
SDESC[std]=		XSLT C library for GNOME
HOMEPAGE=		http://xmlsoft.org/XSLT/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/libxslt/${FOLDER}
DISTFILE[1]=		libxslt-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		gnome2

SPKGS[std]=		set primary dev man docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/Copyright
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/libxslt

BUILD_DEPENDS=		libgcrypt:dev:std
BUILDRUN_DEPENDS=	libgcrypt:primary:std

USES=			cpe cmake pkgconfig
GNOME_COMPONENTS=	libxml2
CMAKE_ARGS=		-DLIBXSLT_WITH_CRYPTO:BOOL=ON
			-DBUILD_SHARED_LIBS:BOOL=ON
			-DLIBXSLT_WITH_PROGRAMS:BOOL=ON
			-DLIBXSLT_WITH_THREADS:BOOL=ON
			-DLIBXSLT_WITH_PYTHON:BOOL=OFF
			-DLIBXSLT_WITH_PROFILER:BOOL=ON
			-DLIBXSLT_WITH_TESTS:BOOL=OFF
			-DLIBXSLT_WITH_XSLT_DEBUG=OFF
CPE_VENDOR=		xmlsoft
SOVERSION=		${SOVERSION}
PLIST_SUB=		EXSLTSOVERSION=${EXSLTVERSION}
			EXSLTSOMAJOR=${EXSLTVERSION:R:R}
			EXSLTVER=${PORTVERSION}
