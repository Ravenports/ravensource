DEF[PORTVERSION]=	2.6
DEF[TAG]=		v${PORTVERSION}
DEF[SOVERSION]=		0.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		zxcvbn-c
VERSION=		${PORTVERSION}
KEYWORDS=		security
VARIANTS=		std
SDESC[std]=		Password strength estimator
HOMEPAGE=		https://github.com/tsyrogit/zxcvbn-c/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/tsyrogit:zxcvbn-c:${TAG}
DISTFILE[1]=		generated:main

SPKGS[std]=		set primary dev tools

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/LICENSE.txt
LICENSE_SCHEME=		solo

EXRUN[tools]=		primary

USES=			gmake c++:tools
MAKEFILE=		makefile
SOVERSION=		${SOVERSION}

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libzxcvbn.so
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/zxcvbn-dictgen
