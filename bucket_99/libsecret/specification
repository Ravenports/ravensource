DEF[PORTVERSION]=	0.20.5
DEF[SOVERSION]=		0.0.0
DEF[CAT1]=		http://docbook.sourceforge.net/release/xsl/current
# ----------------------------------------------------------------------------

NAMEBASE=		libsecret
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		security
VARIANTS=		standard
SDESC[standard]=	Library to access the secret service API
HOMEPAGE=		https://wiki.gnome.org/Projects/Libsecret
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		http://ftp.gnome.org/pub/GNOME/sources/libsecret/${PORTVERSION:R}/
DISTFILE[1]=		libsecret-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/libsecret/secret.h
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		security/libsecret

BUILD_DEPENDS=		libgpg-error:dev:standard
			docbook-xsl:primary:standard
			vala:single:standard
BUILDRUN_DEPENDS=	libgcrypt:single:standard

USES=			gettext-tools gmake libtool meson pkgconfig
GNOME_COMPONENTS=	glib libxslt intltool introspection
# Docs fail to build, disable for now
MESON_ARGS=		-Dgtk_doc=false

INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}

VAR_OPSYS[sunos]=	LDFLAGS=-lintl

pre-configure:
	${REINPLACE_CMD} -e 's|${CAT1}|file://${LOCALBASE}/share/xsl/docbook|' \
		${WRKSRC}/docs/man/meson.build
