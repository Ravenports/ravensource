DEF[PORTVERSION]=	1.0.2
# ----------------------------------------------------------------------------

NAMEBASE=		woff2
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Web Open Font Format 2 reference implementation
HOMEPAGE=		https://github.com/google/woff2
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/google:woff2:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/woff2

BUILD_DEPENDS=		brotli:dev:standard
BUILDRUN_DEPENDS=	brotli:primary:standard

USES=			cmake pkgconfig c++:single
SOVERSION=		${PORTVERSION}

post-install:
	${INSTALL_PROGRAM} ${WRKDIR}/.build/woff2_* ${STAGEDIR}${PREFIX}/bin
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/*.${LIBEXT}
