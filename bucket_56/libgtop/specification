VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	GNOME library to collect system monitoring data
HOMEPAGE=		https://gitlab.gnome.org/GNOME/libgtop/
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.gnome.org/sources/libgtop/${PORTVERSION:R}/
DISTFILE[1]=		libgtop-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		gnome2

SPKGS[standard]=	complete primary nls docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/glibtop.h
LICENSE_AWK=		TERMS:"ifndef __GLIBTOP_H__"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libgtop

BUILD_DEPENDS=		gtk-doc:single:standard

USES=			gettext-tools:build gmake libtool pkgconfig perl
GNOME_COMPONENTS=	glib introspection

MUST_CONFIGURE=		gnu
