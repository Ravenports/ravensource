# known to re-roll
DEF[PORTVERSION]=	2.0.31
DEF[RELEASE_TAG]=	${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		uwsgi
VERSION=		${PORTVERSION}
REVISION=		3
KEYWORDS=		python www
VARIANTS=		std
SDESC[std]=		Fast, self-healing, application container server
HOMEPAGE=		http://projects.unbit.it/uwsgi/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/unbit:uwsgi:${RELEASE_TAG}
DISTFILE[1]=		generated:main
DIST_SUBDIR=		uswsi

SPKGS[std]=		single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2:single
LICENSE_FILE=		GPLv2:{{WRKSRC}}/LICENSE
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		www/uwsgi

BUILD_DEPENDS=		jansson:dev:std
BUILDRUN_DEPENDS=	jansson:primary:std

PYSETUP=		uwsgiconfig.py
PYD_BUILD_TARGET=	--build
PYD_BUILDARGS=		--verbose

USERS=			uwsgi
GROUPS=			uwsgi
USERGROUP_SPKG=		single
RC_SUBR=		uwsgi:single

USES=			cpe pkgconfig ssl zlib pcre iconv gettext
			python:sutools
			smf:single
GNOME_COMPONENTS=	libxml2
CPE_VENDOR=		unbit
SMF_METHODS=		uwsgi_command.sh
MAKE_ENV=		CPUCOUNT={{MAKE_JOBS_NUMBER}}
			UWSGI_EMBED_PLUGINS=cgi
CPPFLAGS=		-I{{OPENSSLINC}}
LDFLAGS=		-L{{OPENSSLLIB}} -Wl,-rpath,{{OPENSSLLIB}}

SUB_FILES=		messages-primary-sunos.ucl
			uwsgi_command.sh
			manifest.xml
SUB_LIST=		APP_USR={{USERS}}
			APP_GRP={{GROUPS}}
			MSCRIPT="{{PREFIX}}/lib/svc/method/uwsgi_command.sh"
PLIST_SUB=		OWN={{USERS}}
			GRP={{GROUPS}}

post-extract:
	${GREP} License ${WRKSRC}/setup.py > ${WRKDIR}/TERMS

post-patch:
	${REINPLACE_CMD} \
		-e '/^json =/ s|= .*|= jansson|' \
		-e '/^pcre =/ s|= .*|= true|' \
		-e '/^xml =/ s|= .*|= libxml2|' \
		${WRKSRC}/buildconf/base.ini

do-configure:
	# don't configure

do-install:
	${MKDIR} ${STAGEDIR}${PREFIX}/var/log/uwsgi
	${MKDIR} ${STAGEDIR}${PREFIX}/var/run/uwsgi
	${MKDIR} ${STAGEDIR}${PREFIX}/etc/uwsgi/vassals-default
	${MKDIR} ${STAGEDIR}${PYTHON_SITELIBDIR}
	${INSTALL_PROGRAM} ${WRKSRC}/uwsgi ${STAGEDIR}${PREFIX}/bin/
	${INSTALL_DATA} ${WRKSRC}/uwsgidecorators.py \
		${STAGEDIR}${PYTHON_SITELIBDIR}
