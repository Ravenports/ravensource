CONFIGURE_ARGS=		--enable-gtk3
			--enable-nls
			--enable-schemas-compile
			--disable-debug
			--libexecdir={{PREFIX}}/lib/xfce4
GLIB_SCHEMAS=		org.xfce.mousepad.gschema.xml
SOVERSION=		${SOVERSION}

VAR_OPSYS[sunos]=	LDFLAGS=-lintl
