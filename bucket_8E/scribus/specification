LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		print/scribus-devel

BUILD_DEPENDS=		qt5-qttools:set:std
			poppler:dev:std
			poppler:cpp:std
			poppler:cppdev:std
			harfbuzz:dev:std
			lcms2:dev:std
			libcdr:dev:std
			boost-libraries:dev:std
