DEF[PORTVERSION]=	0.3.3
DEF[SOVERSION]=		3.0.3
DEF[WPG_VER]=		0.3
# ----------------------------------------------------------------------------

NAMEBASE=		libwpg
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Import filter and tools for WordPerfect graphics
HOMEPAGE=		https://libwpg.sourceforge.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/libwpg/libwpg/libwpg-${PORTVERSION}
DISTFILE[1]=		libwpg-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MPL:single
			LGPL21:single
LICENSE_FILE=		MPL:{{WRKSRC}}/COPYING.MPL
			LGPL21:{{WRKSRC}}/COPYING.PGPL
LICENSE_SCHEME=		dual

FPC_EQUIVALENT=		graphics/libwpg03

BUILD_DEPENDS=		librevenge:dev:standard
BUILDRUN_DEPENDS=	librevenge:primary:standard
			libwpd:single:standard

USES=			libtool pkgconfig shebangfix perl:build mbsdfix
SHEBANG_FILES=		src/conv/svg/wpg2svgbatch.pl
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-werror
			--without-docs
INSTALL_TARGET=		install-strip
PLIST_SUB=		VER=${WPG_VER}
SOVERSION=		${SOVERSION}
