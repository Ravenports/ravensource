DEF[PORTVERSION]=	2.3.9
# ----------------------------------------------------------------------------

NAMEBASE=		unixODBC
VERSION=		${PORTVERSION}
KEYWORDS=		databases
VARIANTS=		standard
SDESC[standard]=	ODBC library suite for Unix
HOMEPAGE=		http://www.unixodbc.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		ftp://ftp.unixodbc.org/pub/unixODBC/
DISTFILE[1]=		unixODBC-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2:primary LGPL21:primary
LICENSE_FILE=		GPLv2:{{WRKSRC}}/COPYING
			LGPL21:{{WKRSRC}}/README
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		databases/unixODBC

# libtool:keepla because port uses lt_dlopen

USES=			cpe iconv libtool:keepla
CPE_VENDOR=		unixodbc
CPE_PRODUCT=		unixodbc
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-static
			--enable-shared
			{{ICONV_CONFIGURE_ARG}}
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes

post-patch:
	${REINPLACE_CMD} -e 's|\.ini$$|.ini.sample|' ${WRKSRC}/Makefile.in
	${HEAD} -n 17 ${WRKSRC}/README | ${TAIL} -n 5 > ${WRKDIR}/TERMS

post-install:
	(cd ${WRKSRC}/doc && ${COPYTREE_SHARE} . ${STAGEDIR}${STD_DOCDIR} \
	    "-not -name 'Makefile*'")
