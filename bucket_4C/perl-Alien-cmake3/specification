VARIANTS=		540 542
SDESC[540]=		Find or download or build cmake 3 (5.40)
SDESC[542]=		Find or download or build cmake 3 (5.42)
HOMEPAGE=		https://github.com/PerlAlien/Alien-cmake3
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:P/PL/PLICEASE
DISTFILE[1]=		Alien-cmake3-${PORTVERSION}.tar.gz:main

SPKGS[540]=		single
SPKGS[542]=		single

OPTIONS_AVAILABLE=	PERL_540 PERL_542
OPTIONS_STANDARD=	none
VOPTS[540]=		PERL_540=ON PERL_542=OFF
VOPTS[542]=		PERL_540=OFF PERL_542=ON

# License listed in CPAN directory:
# perl_5

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Alien-cmake3-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Alien::Base
# |        build : Alien::Build
# |        build : Alien::Build::MM
# |        build : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)
# |    configure : Alien::Build
# |    configure : Alien::Build::MM
# |    configure : Capture::Tiny
# |    configure : ExtUtils::MakeMaker (perl 5.40 core) (perl 5.42 core)
# |    configure : File::Which
# |    configure : Path::Tiny
# |         test : Test2::V0 (perl 5.40 core) (perl 5.42 core)
# |         test : Test::Alien

[PERL_540].USES_ON=			perl:540,configure
[PERL_540].BUILDRUN_DEPENDS_ON=		perl-Alien-Build:single:540
[PERL_540].BUILD_DEPENDS_ON=		perl-Capture-Tiny:single:540
					perl-File-Which:single:540
					perl-Path-Tiny:single:540
[PERL_542].USES_ON=			perl:542,configure
[PERL_542].BUILDRUN_DEPENDS_ON=		perl-Alien-Build:single:542
[PERL_542].BUILD_DEPENDS_ON=		perl-Capture-Tiny:single:542
					perl-File-Which:single:542
					perl-Path-Tiny:single:542

# Same issue as Alien::CFITSIO
BUILDRUN_DEPENDS=	cmake:primary:std
