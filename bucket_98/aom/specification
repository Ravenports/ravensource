DEF[PORTVERSION]=	3.13.1
DEF[SOVERSION]=		${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		aom
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		multimedia
VARIANTS=		std
SDESC[std]=		Alliance for Open Media video codec
HOMEPAGE=		https://aomedia.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://storage.googleapis.com/aom-releases/
DISTFILE[1]=		libaom-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary tools dev

OPTIONS_AVAILABLE=	ASM
OPTIONS_STANDARD=	ASM
OPT_ON[all]=		ASM

LICENSE=		BSD2CLAUSE:primary
LICENSE_FILE=		BSD2CLAUSE:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

# FPC uses different versioning scheme
# FPC_EQUIVALENT=		multimedia/aom

EXRUN[tools]=		aom:primary:std

USES=			cpe cmake c++:primary perl:build
CPE_VENDOR=		aomedia
CPE_PRODUCT=		libaom
CMAKE_ARGS=		-DBUILD_SHARED_LIBS:BOOL=ON
			-DENABLE_DOCS:BOOL=OFF
			-DENABLE_TESTS:BOOL=OFF
SOVERSION=		${SOVERSION}
SINGLE_JOB=		yes
INSTALL_REQ_TOOLCHAIN=	yes
DISTNAME=		libaom-${PORTVERSION}

# If aarch64 ever gets supported, this has to be improved

[ASM].DESCRIPTION=			Use NASM assembler during build
[ASM].BUILD_DEPENDS_ON=			nasm:primary:std
[ASM].CMAKE_ARGS_OFF=			-DAOM_TARGET_CPU="generic"
[ASM].CMAKE_ARGS_ON=			-DAOM_TARGET_CPU="x86_64"

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/aomdec
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/aomenc
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libaom.so
